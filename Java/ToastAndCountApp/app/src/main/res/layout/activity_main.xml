<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_app"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/app_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/app_name"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/toast_btn"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/toast_btn_costum"
        android:textColor="#6E78F7"
        android:textSize="23sp"
        android:fontFamily="sans-serif-black"
        android:text="@string/toast_txt"/>

    <TextView
        android:id="@+id/count_txt"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/bg_num"
        android:text="@string/intitial_toast"
        android:gravity="center"
        android:textSize="70sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/min_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:layout_gravity="left"
            android:background="@drawable/min_btn_costum"
            android:text="@string/min_txt"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-black"/>

        <Button
            android:id="@+id/count_btn"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/min_btn_costum"
            android:text="@string/count_txt"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"/>

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:layout_gravity="right"
            android:background="@drawable/reset_btn_costum"
            android:text="@string/reset_txt"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-black"/>

    </LinearLayout>



</LinearLayout>
